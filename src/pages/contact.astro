---
import MainLayout from '../layouts/MainLayout.astro';
title: 'Contact Us'
---

<MainLayout>
  <section class="contact">
    <h1>Contact Us</h1>
    <p>If you have any questions or enquiries, feel free to reach out to us!</p>

    <!-- Formspree Integration -->
    <form action="https://formspree.io/f/your-form-id" method="POST" class="contact-form">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
      </div>

      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
      </div>

      <div class="form-group">
        <label for="message">Message:</label>
        <textarea id="message" name="message" required></textarea>
      </div>

      <button type="submit" class="submit-button">Send</button>
    </form>

    <section class="contact-info">
      <h2>Contact Information</h2>
      <p><strong>Email:</strong> info@example.com</p>
      <p><strong>Phone:</strong> 07777777777</p>
    </section>
  </section>

  <style>
    .contact {
      padding: 2rem;
      max-width: 800px;
      margin: 0 auto;
      text-align: center;
    }

    .contact h1 {
      font-family: 'Oswald', sans-serif;
      font-size: 2rem;
      margin-bottom: 1rem;
    }

    .contact p {
      font-family: 'Roboto', sans-serif;
      font-size: 1rem;
      margin-bottom: 2rem;
      color: #555;
    }

    .contact-form {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      text-align: left;
    }

    .form-group label {
      font-family: 'Roboto', sans-serif;
      font-size: 1rem;
      margin-bottom: 0.5rem;
      color: #333;
    }

    .form-group input,
    .form-group textarea {
      padding: 0.75rem;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-family: 'Roboto', sans-serif;
    }

    .form-group textarea {
      resize: vertical;
      min-height: 100px;
    }

    .submit-button {
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      font-family: 'Oswald', sans-serif;
      background-color: #333;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .submit-button:hover {
      background-color: #555;
    }

    .contact-info {
      margin-top: 2rem;
      text-align: left;
    }

    .contact-info h2 {
      font-family: 'Oswald', sans-serif;
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    .contact-info p {
      font-family: 'Roboto', sans-serif;
      font-size: 1rem;
      margin: 0.5rem 0;
      color: #333;
    }
  </style>
</MainLayout>