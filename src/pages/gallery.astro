---
import MainLayout from '../layouts/MainLayout.astro';
title: 'Gallery';
---

<MainLayout>
  <div class="gallery-intro">
    <h1>Gallery</h1>
    <p>Welcome! Browse through images of my previous work below.</p>
  </div>
  <div class="gallery-grid">
    <img src="/images/image-1.jpg" alt="Photo 1">
    <img src="/images/image-3.jpg" alt="Photo 2">
    <img src="/images/image-4.jpg" alt="Photo 3">
    <img src="/images/image-5.jpg" alt="Photo 4">
  </div>
</MainLayout>

<style>
  .gallery-intro {
    text-align: center;
    margin: 2rem 0;
    h1 {
      font-family: 'Oswald', sans-serif;
    }
  }
  .gallery-grid {
    display: grid;
    grid-template-columns: 1fr; /* Default: one image per row */
    gap: 16px;
    padding: 1rem;
  }
  @media screen and (min-width: 768px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr); /* Two images per row on desktop */
    }
  }
  .gallery-grid img {
    width: 100%; /* Ensures the image fills the column width */
    height: auto; /* Maintains the aspect ratio */
    object-fit: cover; /* Ensures the image fills the space without distortion */
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
</style>